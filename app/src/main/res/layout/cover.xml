<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#555"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/albumpic"
        android:layout_width="@dimen/secondherowidth"
        android:layout_height="90dp"
        android:background="#000"
        android:src="@drawable/imgview" />
    <com.sweetoranges.abc.unsunged.Cover.RoundedImageView
        android:id="@+id/userpic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/albumpic"
        android:layout_alignBottom="@+id/albumpic"
        android:layout_margin="6dp"
        android:src="@drawable/imgview" />
    <ImageView android:id="@+id/likealbum"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/albumpic"
        android:layout_alignBottom="@+id/albumpic"
        android:elevation="12dp"
        android:background="@drawable/heart_unliked"/>
</RelativeLayout>