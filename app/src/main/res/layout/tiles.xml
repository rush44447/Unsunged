<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
   android:paddingTop="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ddd">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_griditem"
        android:layout_centerVertical="true"
        android:layout_width="330dp"
        android:layout_height="630dp"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp">
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/text11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="cursive"
                android:layout_centerHorizontal="true"
                android:shadowColor="@android:color/black"
                android:shadowDx="2"
                android:shadowRadius="10"
                android:textColor="#42ebf4"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/textView"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/textView2"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/textView4"
                android:text="TextView" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/textView5"
                android:text="TextView" />
            <view
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="#000"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="7dp"/>
            <GridView android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="10dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <com.github.florent37.shapeofview.shapes.CircleView
        android:id="@+id/circle"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:elevation="8dp"
        android:layout_above="@+id/card_griditem"
        android:layout_marginBottom="-38dp"
        android:layout_alignLeft="@+id/card_griditem"
        android:layout_marginStart="128dp"
        app:shape_circle_borderColor="@android:color/black"
        app:shape_circle_borderWidth="2dp">

        <ImageView
            android:id="@+id/circleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/circle"
            android:scaleType="centerCrop"
            android:src="@drawable/imgview" />
    </com.github.florent37.shapeofview.shapes.CircleView>
</RelativeLayout>