<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:paddingTop="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.sweetoranges.abc.unsunged.Cover.RoundedImageView
        android:id="@+id/circleView"
        android:layout_width="80dp"
        android:layout_marginTop="10dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="116dp"
        android:elevation="10dp"
        android:src="@drawable/imgview" />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_griditem"
        android:layout_width="280dp"
        android:layout_marginBottom="4dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/circleView"
        android:layout_marginTop="-40dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp">
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:textColor="#42ebf4"
            android:text="ru5h.97"
            android:layout_marginStart="14dp"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/userrank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:textColor="#42ebf4"
            android:text="this will go right"
            android:layout_marginStart="190dp"
            android:textSize="18sp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="#33000000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backimage"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/quickrecycler"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>