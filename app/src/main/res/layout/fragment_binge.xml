<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".BingeFragment.BingeFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="#666600"
        android:shadowColor="#000"
        android:text="  Fresh"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="90dp"
        android:id="@+id/story"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="#666600"
        android:shadowColor="#000"
        android:text="  Unsunged Heroes of the week"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="160dp">
<androidx.cardview.widget.CardView
    android:id="@+id/firsthero"
    android:layout_width="0dp"
    android:layout_weight=".60"
    android:layout_height="200dp"
    android:fadingEdge="horizontal"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:clipToPadding="false"
    android:clipChildren="false"
    app:cardElevation="20dp"
    app:cardMaxElevation="24dp">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/imgview"/>
    <TextView
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginStart="8dp"
        android:textSize="19sp"
        android:textColor="#F0E68C"
        android:text="I am a Hero"/>
</androidx.cardview.widget.CardView>
<RelativeLayout
    android:layout_width="0dp"
    android:layout_weight=".40"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_disc_full_black_24dp"/>
    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="37dp"
        android:textSize="17sp"
        android:textColor="#666600"
        android:text="#1: Rushabh"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/secondhero"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="40dp"
            android:fadingEdge="horizontal"

            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="20dp"
            app:cardMaxElevation="24dp">
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@drawable/sample"/>
            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="65dp"
                android:layout_marginStart="8dp"
                android:textColor="#F0E68C"
                android:text="I am a Hero"/>
        </androidx.cardview.widget.CardView>
</RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_height="100dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/thirdhero"
            android:fadingEdge="horizontal"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="match_parent"

            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="20dp"
            app:cardMaxElevation="24dp"
>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sample"/>
            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:textColor="#FFFF99"
                android:layout_marginStart="6dp"
                android:textSize="13sp"
                android:text="I am a Hero"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/forthhero"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:fadingEdge="horizontal"
            android:layout_height="match_parent"

            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="20dp"
            app:cardMaxElevation="24dp"
>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sample"/>
            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFFF99"
                android:layout_marginStart="6dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:textSize="13sp"
                android:text="I am a Hero"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/fisthhero"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="match_parent"
            android:fadingEdge="horizontal"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="20dp"
            app:cardMaxElevation="24dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sample"/>
            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginStart="6dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:textSize="13sp"
                android:textColor="#F0E68C"
                android:text="I am a Hero"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="#666600"
        android:shadowColor="#000"
        android:text="  Albums of your Followings"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="180dp"
        android:id="@+id/albums"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="#666600"
        android:shadowColor="#000"
        android:text="  Shared to you in form of album named after sharer"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="180dp"
        android:id="@+id/shared"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="#666600"
        android:shadowColor="#000"
        android:text="  Your Favourites"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="180dp"
        android:id="@+id/favourites"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="#666600"
        android:shadowColor="#000"
        android:text="  Your Supported"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="180dp"
        android:id="@+id/support"/>
</LinearLayout>

</ScrollView>