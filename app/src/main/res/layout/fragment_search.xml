<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fragment_content"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SearchFragment.SearchFragment">
        <com.quinny898.library.persistentsearch.SearchBox
            android:layout_width="wrap_content"
            android:id="@+id/searchbox"
            android:layout_height="70dp" />
        <HorizontalScrollView
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search by Profile"
            android:textSize="18sp"
            android:textColor="#42ebf4" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Search by Type"
            android:textSize="18sp"
            android:textColor="#42ebf4" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/language"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search by Language"
            android:textSize="18sp"
            android:textColor="#42ebf4" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/mood"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search by Mood"
                        android:textSize="18sp"
                        android:textColor="#42ebf4" />
                </LinearLayout>
        </HorizontalScrollView>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchRecycler"
        android:orientation="horizontal"
        android:paddingTop="7dp"
        android:layoutDirection="rtl"
        android:layout_marginBottom="35dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/typeRecyc"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
</RelativeLayout>
</LinearLayout>