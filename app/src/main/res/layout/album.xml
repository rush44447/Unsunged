<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:id="@+id/storycircle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="8dp"
        app:cardCornerRadius="10dp">

        <com.sweetoranges.abc.unsunged.Cover.RoundedImageView
            android:id="@+id/storyimage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="13dp"
            android:src="@drawable/imgview" />
        <com.sweetoranges.abc.unsunged.Cover.TriangleImageView
            android:id="@+id/imageView_triangle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="10dp"
            android:layout_marginStart="20dp"
           android:layout_marginTop="20dp"
            android:src="@drawable/download" />
        <ImageView android:id="@+id/playalbum"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="32dp"
            android:elevation="10dp"
            android:alpha="50"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:layout_centerHorizontal="true"/>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:backgroundTint="#444"
        android:layout_marginTop="60dp"
        />
    <ImageView android:id="@+id/likealbum"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="64dp"
        android:layout_marginStart="3dp"
        android:elevation="12dp"
        android:background="@drawable/heart_unliked"/>
    <TextView android:id="@+id/storyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storycircle"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Better Not"/>
</RelativeLayout>