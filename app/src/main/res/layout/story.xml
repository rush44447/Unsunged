<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/storyspace"
        android:layout_width="300dp"
        android:layout_height="180dp"
    android:layout_marginEnd="110dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listen to Fresh"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_arrow_back_black_24dp" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/mystory"
        android:layout_marginStart="-106dp"
        android:layout_toEndOf="@+id/storyspace"
        android:layout_width="110dp"
        android:layout_height="110dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ladyc" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/firststory"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/mystory"
        android:layout_width="@dimen/firststorywidth"
        android:layout_height="110dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/firstSong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/lady" />
        <androidx.cardview.widget.CardView
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="22dp"
            android:layout_marginTop="54dp"
            android:layout_marginStart="12dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/firstProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/ladyc"/>
        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/firstSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_marginStart="60dp"
            android:textStyle="bold"
            android:text="Better Not"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/firstProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:layout_marginStart="60dp"
            android:text="Louis teh child"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/secondstory"
        android:layout_marginTop="114dp"
        android:layout_marginStart="-106dp"
        android:layout_toEndOf="@+id/storyspace"
        android:layout_width="@dimen/firststorywidth"
        android:layout_height="110dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/secondSong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/lady" />
        <androidx.cardview.widget.CardView
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="22dp"
            android:layout_marginTop="54dp"
            android:layout_marginStart="12dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/secondProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/ladyc"/>
        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/secondSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_marginStart="60dp"
            android:textStyle="bold"
            android:text="Better Not"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/secondProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:layout_marginStart="60dp"
            android:text="Louis teh child"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/thirdstory"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/firststory"
        android:layout_width="@dimen/firststorywidth"
        android:layout_height="110dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/thirdSong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/lady" />
        <androidx.cardview.widget.CardView
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="22dp"
            android:layout_marginTop="54dp"
            android:layout_marginStart="12dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/thirdProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/ladyc"/>
        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/thirdSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_marginStart="60dp"
            android:textStyle="bold"
            android:text="Better Not"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/thirdProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:layout_marginStart="60dp"
            android:text="Louis teh child"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/forthstory"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/firststory"
        android:layout_toEndOf="@+id/secondstory"
        android:layout_width="@dimen/firststorywidth"
        android:layout_height="110dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/forthSong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/lady" />
        <androidx.cardview.widget.CardView
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="22dp"
            android:layout_marginTop="54dp"
            android:layout_marginStart="12dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/forthProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/ladyc"/>
        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/forthSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_marginStart="60dp"
            android:textStyle="bold"
            android:text="Better Not"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/forthProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:layout_marginStart="60dp"
            android:text="Louis teh child"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>